---
import Navbar from "../components/Navbar.astro";
import "flowbite";
const { title, metaDescription } = Astro.props;
import '@fontsource/lato';
import '@fontsource-variable/montserrat';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={metaDescription} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<script
			is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
		></script>
		<link
		rel="stylesheet"
		href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
	  />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<main class="mt-36">
			<slot />
		</main>
		
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;

	:root {
		--button: #FFB600;
		--gray: #888888;
		--light-gray: #999999;
		--red: #DB1F00;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	* {
		margin: 0;
    padding: 0;
	}

	body {
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
		height: 100%;
	}

	html {
    font-family: "Montserrat", system-ui, sans-serif;
    background: #fff;
    background-size: 224px;
    height: 100%;
  }

  h1 {
    font-size: 48px;
    font-weight: 700;
    line-height: 62px;
  }
  h2 {
    font-size: 40px;
    font-weight: 600;
    line-height: 52px;
  }
  h3 {
    font-size: 32px;
    font-weight: 600;
    line-height: 42px;
  }
  h4 {
    font-size: 24px;
    font-weight: 500;
    line-height: 32px;
  }
  h5 {
    font-size: 18px;
    font-weight: 500;
    line-height: 23px;
  }

  .body,
  button {
    font-size: 16px;
    font-family: "Lato", sans-serif;
    line-height: 24px;
  }

  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

	@layer components {
    .max-container {
      max-width: 1192px;
      margin: 0 auto;
    }
  }
</style>