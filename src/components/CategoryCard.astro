---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { imagePath, altText, name } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/images/*.{jpeg,jpg,png,gif}"`
  );
---

<li>
  <div
    class="flex items-center justify-start gap-8 h-full p-4 bg-white rounded-2xl shadow-2xl"
  >
    <Image src={images[imagePath]()} alt={altText} class="w-2/5" />

    <p class="capitalize">{name}</p>
  </div>
</li>

<style>
  img {
    height: 100%;
    object-fit: contain;
  }
</style>
