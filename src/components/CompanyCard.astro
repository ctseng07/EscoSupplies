---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { imagePath, altText, extraClasses } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/images/*.{jpeg,jpg,png,gif}"`
  );
---

<li>
  <div class=` rounded-2xl ${extraClasses}`>
    <Image
      src={images[imagePath]()}
      alt={altText}
      class=`object-cover w-full rounded-2xl shadow-2xl cursor-pointer hover:scale-110 ${extraClasses}`
    />
  </div>
</li>

<style>
  img {
    height: 100%;
    object-fit: cover;
  }
</style>
