---
import { Image } from "astro:assets";
import { EsLogo } from "../images";
---

<footer>
  <div class="body mx-auto py-12">
    <div
      class="flex justify-between max-container max-lg:flex-col lg:flex-row max-xl:px-7"
    >
      <a href="/EscoSupplies">
        <Image src={EsLogo} alt="LogoFooter" class="object-cover" width={203} />
      </a>

      <!-- Navlinks -->
      <div
        class="lg:flex items-start pl-8 pr-4 py-2 justify-between flex-wrap max-xl:gap-4 grid grid-cols-3 max-lg:py-8 max-sm:grid-cols-1 w-full"
      >
        <div class="gap-2 flex justify-between flex-col pb-4">
          <h5
            class="mb-2 capitalize underline decoration-2 decoration-[--red] underline-offset-8"
          >
            quick links
          </h5>
          <a href="/EscoSupplies/brands">
            <span class="capitalize hover:text-[--gray]"> our brands </span>
          </a>
        </div>
        <div class="gap-2 flex justify-between flex-col pb-4">
          <h5
            class="mb-2 capitalize underline decoration-2 decoration-[--red] underline-offset-8"
          >
            our products
          </h5>
          <a href="/EscoSupplies/lighting">
            <span class="capitalize hover:text-[--gray]">LED lighting </span>
          </a>
          <a href="/EscoSupplies/ev-chargers">
            <span class="hover:text-[--gray]"> EV Chargers </span>
          </a>
          <a href="/EscoSupplies/ptacs">
            <span class="hover:text-[--gray]"> PTACs </span>
          </a>
        </div>
        <div class="gap-2 flex justify-between flex-col pb-4">
          <h5
            class="mb-2 capitalize underline decoration-2 decoration-[--red] underline-offset-8"
          >
            company
          </h5>
          <a
            class="group transition-all flex flex-col"
            href="/EscoSupplies/about"
          >
            <span class="capitalize hover:text-[--gray]"> about us </span>
          </a>
          <a
            class="group transition-all flex flex-col"
            href="/EscoSupplies/services"
          >
            <span class="capitalize hover:text-[--gray]"> services </span>
          </a>
        </div>

        <div class="gap-2 flex justify-between flex-col pb-4">
          <h5
            class="capitalize underline decoration-2 decoration-[--red] underline-offset-8 text-[--dark]"
          >
            office hours:
          </h5>
          <p>Monday-Friday: <br />7:30am-4:00pm PST</p>
        </div>

        <!-- Contact info -->
        <div class="gap-2 flex justify-between flex-col pb-4">
          <h5
            class="mb-2 capitalize underline decoration-2 decoration-[--red] underline-offset-8"
          >
            contact us
          </h5>
          <div class="flex items-center mb-4 gap-4">
            <span class="material-symbols-outlined"> call</span>
            <p>(888) 989-ESCO</p>
          </div>
          <div class="flex items-center gap-4">
            <span class="material-symbols-outlined"> mail</span>
            <p>
              <a href="mailto:info@escosupplies.com">info@escosupplies.com</a>
            </p>
          </div>
        </div>
      </div>

      <!-- Copyright -->
    </div>
    <div>
      <p class="max-container max-xl:mt-4 max-sm:text-center max-xl:px-8 pt-12">
        Â©Copyright. All rights reserved. EscoSupplies2024
      </p>
    </div>
  </div>

  <style>
    footer {
      background-color: #eeeeee;
      color: #444444;
    }

    * {
      /* border: 1px solid red; */
    }

    .material-symbols-outlined {
      font-variation-settings:
        "FILL" 0,
        "wght" 400,
        "GRAD" 0,
        "opsz" 24;
    }
  </style>
</footer>
