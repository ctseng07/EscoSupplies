---
import Layout from "../layouts/Layout.astro";
import CompanyCard from "../components/CompanyCard.astro";
import companies from "../data/companies.json";
---

<Layout title="Esco Supplies">
  <h2
    class="text-center mb-8 uppercase underline underline-offset-8 decoration-[--red]"
  >
    Companies we are distributors for:
  </h2>
  <section class="bg-[--light-blue] max-container rounded-2xl">
    <div class="max-container p-8 rounded-2xl">
      <ul class="grid gap-8 grid-cols-2 md:grid-cols-3 lg:grid-cols-4 px-4">
        {
          companies.map((card) => (
            <CompanyCard imagePath={card.imagePath} altText={card.altText} />
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
