---
import Layout from "../layouts/Layout.astro";
import CompanyCard from "../components/CompanyCard.astro";
import companies from "../data/companies.json";
import Subscribe from '../components/Subscribe.astro';
---

<Layout title="Esco Supplies">
    <h2 class="text-center mb-4 uppercase max-sm:text-2xl max-lg:px-2 text-[--red]">Companies we are distributors for:</h2>
    <p class="text-center mb-8">EscoSupplies is your source for these company brand products.</p>
    <section class="px-2 mb-6">
   <div class="max-container p-8 rounded-2xl max-sm:px-2 bg-[--light-gray]">
        <ul class="grid gap-8 grid-cols-2 md:grid-cols-3 lg:grid-cols-4 px-4">
            {
                companies.map((card) => (
                    <CompanyCard
                        imagePath={card.imagePath}
                        altText={card.altText}
                        alt={card.alt}
                    extraClasses={card.extraClasses}

                    />
                ))
            }
        </ul>
        </div>
    </section>
    <Subscribe />
</Layout>

